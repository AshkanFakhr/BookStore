<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.webpouyaco.bookstore.SearchActivity">

    <include
        android:id="@+id/searchActivityToolbar"
        layout="@layout/search_activity_toolbar" />

    <ImageView
        android:id="@+id/search_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/search"
        android:onClick="searchViewClick"
        android:src="@drawable/search"
        android:title="@string/search" />

    <Button
        android:id="@+id/get_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchActivityToolbar"
        android:layout_centerHorizontal="true"
        android:onClick="getBook"
        android:text="get books" />

    <TextView
        android:id="@+id/get_search_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_search_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

</RelativeLayout>
